{{#paper-toolbar}}
  <div class="md-toolbar-tools">
    {{#paper-sidenav-toggle as |toggle|}}
      {{#paper-button target=toggle action="toggleMenu" icon-button=true}}{{paper-icon "menu"}}{{/paper-button}}
    {{/paper-sidenav-toggle}}
    <span class="md-breadcrumb-page"><span class="clickable" {{action "transitionTo" "admin"}}>My Sites</span> {{paper-icon "keyboard-arrow-right"}} {{model.title}}</span>
  </div>
{{/paper-toolbar}}

<h2>Site: {{model.title}}</h2>
{{#if model.posts}}
  <h3>Posts:</h3>
  {{admin-post-list posts=model.posts}}
{{else}}
  <h3>This site has no posts yet.</h3>
{{/if}}
<br>

{{#link-to 'new-post' model.id}}Add New Post{{/link-to}}

{{delete-site site=model delete="delete"}}
