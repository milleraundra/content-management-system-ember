{{#paper-toolbar}}
  <div class="md-toolbar-tools">
    {{#paper-sidenav-toggle as |toggle|}}
      {{#paper-button target=toggle action="toggleMenu" icon-button=true}}{{paper-icon "menu"}}{{/paper-button}}
    {{/paper-sidenav-toggle}}
    <span class="md-breadcrumb-page"><span class="clickable" {{action "transitionTo" "admin"}}>My Sites</span> {{paper-icon "keyboard-arrow-right"}} {{model.title}}</span>
  </div>
{{/paper-toolbar}}

{{#paper-content class="md-padding"}}

  <h2>Site: {{model.title}}</h2>
  <p>{{model.description}}</p>
  {{paper-divider}}
    {{#if model.posts}}
      <h3>Posts:</h3>
      <p><i>Click a post to edit it</i></p>
      {{admin-post-list posts=model.posts goToEditPost="goToEditPost"}}
    {{else}}
      <h3>This site has no posts yet.</h3>
    {{/if}}
  <br>

  {{#paper-button primary=true raised=true action='newPost' param=model}}Add New Post{{/paper-button}}

  {{delete-site site=model delete="delete"}}

{{/paper-content}}
