{{#paper-nav-container}}
  {{#paper-sidenav class="md-sidenav-right md-whiteframe-z2" locked-open="gt-lg"}}
    {{#paper-toolbar}}
      <div class="md-toolbar-tools">
        <div class="logo">
          Ember CMS
        </div>
      </div>
    {{/paper-toolbar}}

    {{#paper-content}}
      {{#paper-list}}
        {{#if session.isAuthenticated}}
          {{#paper-item}}Logged in as {{session.currentUser.email}}{{/paper-item}}
          {{#paper-button warn=true action="signOut"}}Sign out{{/paper-button}}
        {{else}}
          {{user-login signIn="signIn"}}
          {{new-user createUser="createUser"}}
        {{/if}}
        {{paper-divider}}
        {{#paper-item action="transitionTo" param="index"}}Home{{/paper-item}}

        {{#if session.isAuthenticated}}
          {{#paper-item action="transitionTo" param="admin"}}Admin{{/paper-item}}
        {{/if}}



      {{/paper-list}}
    {{/paper-content}}
  {{/paper-sidenav}}

  <div layout="column" tabindex="-1" role="main" flex>
    {{outlet}}
  </div>
{{/paper-nav-container}}
