{{#paper-nav-container}}
  {{#paper-sidenav class="md-sidenav-right md-whiteframe-z2" locked-open="gt-lg"}}
    {{#paper-toolbar}}
      <div class="md-toolbar-tools">
        <div class="logo">
          Ember CMS
        </div>
      </div>
    {{/paper-toolbar}}

    {{#paper-content}}
      {{#paper-list}}
        {{#if session.isAuthenticated}}
          Logged in as {{session.currentUser.email}} {{paper-button label="Sign Out" action="signOut" warn=true }}
          {{#paper-item action="transitionTo" param="admin"}}My Sites{{/paper-item}}
          {{#paper-item action="transitionTo" param="new-site"}}Create new site{{/paper-item}}
        {{else}}
          {{create-signin signIn="signIn" createUser="createUser"}}
        {{/if}}
        {{paper-divider}}
        {{#paper-item action="transitionTo" param="index"}}Home{{/paper-item}}
        {{#paper-item action="transitionTo" param="index"}}Other Link{{/paper-item}}
        {{#paper-item action="transitionTo" param="index"}}Other Link{{/paper-item}}
        {{#paper-item action="transitionTo" param="index"}}Other Link{{/paper-item}}
      {{/paper-list}}
    {{/paper-content}}
  {{/paper-sidenav}}

  <div layout="column" tabindex="-1" role="main" flex>
    {{outlet}}
  </div>
{{/paper-nav-container}}
