{{#paper-nav-container}}
  {{#paper-sidenav class="sm-sidenav-right md-whiteframe-z2" locked-open="gt-lg"}}
    {{#paper-toolbar}}
      <div class="md-toolbar-tools">
        <div class="logo">
          Ember CMS
        </div>
      </div>
    {{/paper-toolbar}}

    {{#paper-content}}
      {{#paper-list}}
        {{#if session.isAuthenticated}}
          {{#paper-item}}<h5>Logged in as {{session.currentUser.email}}</h5>{{/paper-item}}
          {{#paper-item}}{{paper-button label="Log Out" action="signOut" warn=true raised=true}}{{/paper-item}}
          {{#paper-item action="transitionTo" param="admin"}}My Sites{{/paper-item}}
          {{#paper-item action="transitionTo" param="new-site"}}Create new site{{/paper-item}}
        {{else}}
          {{create-signin signIn="signIn" createUser="createUser"}}
        {{/if}}
        {{paper-divider}}
        {{#paper-item action="transitionTo" param="index"}}Home{{/paper-item}}
        {{paper-divider}}
        {{#paper-item action="toCategory" param="Food"}}Food{{/paper-item}}
        {{#paper-item action="toCategory" param="Animals"}}Animals{{/paper-item}}
        {{#paper-item action="toCategory" param="Fitness"}}Fitness{{/paper-item}}
        {{#paper-item action="toCategory" param="Politics"}}Politics{{/paper-item}}
        {{#paper-item action="toCategory" param="Lifestyle"}}Lifestyle{{/paper-item}}
        {{#paper-item action="toCategory" param="Miscellaneous"}}Miscellaneous{{/paper-item}}
      {{/paper-list}}
    {{/paper-content}}
  {{/paper-sidenav}}

  <div layout="column" tabindex="-1" role="main" flex>
    {{outlet}}
  </div>
{{/paper-nav-container}}
