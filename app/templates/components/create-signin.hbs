{{paper-button label="Log In" primary=true raised=true action='loginFormToggle'}}
{{paper-button label="New User" warn=true raised=true action='createUserFormToggle'}}

  {{#if loginForm}}
    {{paper-input type="email" id=email label="Email" value=email}}
    {{paper-input type="password" id=password label="Password" value=password}}
    {{#paper-button primary=true raised=true action='signIn'}}Sign in{{/paper-button}}
  {{/if}}

  {{#if newUserForm}}
    {{paper-input type="email" id=email label="Email" value=email}}

    {{paper-input type="username" id=username label="Username" value=username}}

    {{paper-input type="password" id=password label="Password" value=password}}

    {{#paper-button primary=true raised=true action='newUser'}}Save{{/paper-button}}
  {{/if}}
